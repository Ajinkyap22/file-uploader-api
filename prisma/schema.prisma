generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id String @id @default(uuid())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  files File[]
}

model File {
  id String @id @default(uuid())
  name String
  url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  folder Folder @relation(fields: [folderId], references: [id])
  folderId String
}
